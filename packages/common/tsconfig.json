{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@panda-ui/*": ["../common/*/src"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
