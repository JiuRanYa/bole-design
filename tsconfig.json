{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "paths": {
      "@bole-design/*": ["packages/*"],
      "@/common/*": ["./common/*"],
      "bole-design": ["."]
    }
  },
  "include": ["packages/components", "dev-server", "index.ts", "types.d.ts"]
}
